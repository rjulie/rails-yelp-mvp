<h1>Add a new review</h1>

<div>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, label: "Rating" %>
    <%= f.input :content, label: "Content" %>
    <%= f.submit "Soumettre", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to "Back", restaurant_path(@restaurant) %>
